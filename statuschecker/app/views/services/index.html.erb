<% @services.each do | s | %>
<h3>Service: <%= s.name %></h3>
  <p>API address - <%= s.web_api %></p>
  <p>Json path - <%= s.json_path %></p>
  <p>id - <%= s.id %></p>

<% if @fb_status == 1 %>
  <%= Ping.create(up: true, service: s) %>
<% else %>
   <%= Ping.create(up: false, service: s) %>
<% end %>





<p>LAST PING:</p>
  <% @pings.each do | p | %>
    <% if p.service_id == s.id  %>
    <p> <%= p %> <%= p.created_at %> <%= p.service_id %> <%= p.up %> </p>
  <% end %>
  <% end %>



    <% end %>


